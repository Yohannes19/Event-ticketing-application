<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center">Forgot Your Password?</h2>

          <%= form_with model: resource, as: resource_name, url: password_path(resource_name), html: { class: "forgot-password-form" } do |f| %>
            <div class="form-group">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
            </div>

            <div class="mt-4">
              <%= f.submit "Send Reset Instructions", class: "btn btn-primary btn-block w-100" %>
            </div>
          <% end %>

          <div class="mt-3 text-center">
            <%= link_to "Back to Sign In", new_session_path(resource_name), class: "text-muted" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
