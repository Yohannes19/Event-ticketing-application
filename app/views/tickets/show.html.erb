<h1><%= @event.name %></h1>
<p><%= @event.description %></p>
<p><%= @event.date.strftime("%B %d, %Y %H:%M") %> at <%= @event.location %></p>

<% if user_signed_in? %>
  <%= link_to 'Purchase Ticket', new_event_ticket_path(@event) %>
<% end %>

<% if current_user == @event.organizer %>
  <%= link_to 'Edit Event', edit_event_path(@event) %> |
  <%= link_to 'Delete Event', @event, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
