<div class="container mt-5">
  <h1 class="text-center">Admin Dashboard</h1>

  <div class="row">
    <div class="col-md-4">
      <div class="card mb-3">
        <div class="card-header">Manage Events</div>
        <div class="card-body">
          <p>Total Events: <%= @events.count %></p>
          <%= link_to 'View All Events', admin_events_path, class: 'btn btn-primary' %>
          <%= link_to 'Create New Event', new_admin_event_path, class: 'btn btn-success mt-2' %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card mb-3">
        <div class="card-header">Manage Users</div>
        <div class="card-body">
          <p>Total Users: <%= @users.count %></p>
          <%= link_to 'View All Users', admin_users_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>

    <!-- Add more cards for other management tasks -->
  </div>
</div>
