<div class="container mt-5">
  <h1 class="text-center">Manage Events</h1>

  <%= link_to 'New Event', new_admin_event_path, class: 'btn btn-success mb-3' %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Location</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.date %></td>
          <td><%= event.location %></td>
          <td>
            <%= link_to 'Show', admin_event_path(event), class: 'btn btn-info btn-sm' %>
            <%= link_to 'Edit', edit_admin_event_path(event), class: 'btn btn-warning btn-sm' %>
            <%= link_to 'Delete', admin_event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
