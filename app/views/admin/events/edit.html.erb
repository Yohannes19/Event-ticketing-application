<div class="container mt-5">
  <h1 class="text-center">New Events</h1>
  <h1><%= action_name.capitalize %> Event</h1>

<%= form_with model: @event do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field  :name, placeholder: "Enter event name" %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description, placeholder: "Enter event description" %>
  </div>

  <div>
    <%= form.label :location %>
    <%= form.text_field :location, placeholder: "Enter event location"%>
  </div>

  <div>
    <%= form.label :date %>
    <%= form.datetime_select :date %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>


</div>
