<div class="container mt-5">
  <h1 class="text-center mb-5">Upcoming Events</h1>

  <% if current_user&.organizer? %>
    <div class="d-flex justify-content-end mb-4">
      <%= link_to 'Create New Event', new_event_path, class: 'btn btn-success btn-lg shadow-sm' %>
    </div>
  <% end %>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @events.each do |event| %>
      <div class="col">
        <div class="card h-100 shadow-sm border-light rounded-3 overflow-hidden">
          <%# Using a placeholder image %>
          <%= image_tag 'logo.png', class: 'card-img-top img-fluid', alt: 'Event Image', style: "height: 200px; object-fit: cover;" %>
          
          <div class="card-body d-flex flex-column">
            <h5 class="card-title mb-2">
              <%= link_to event.name, event, class: 'text-decoration-none text-dark fw-bold' %>
            </h5>
            <p class="card-text mb-2 text-muted">
              <i class="fas fa-calendar-alt"></i> <%= event.date.strftime("%B %d, %Y") %>
            </p>
            <p class="card-text mb-3 text-muted">
              <i class="fas fa-map-marker-alt"></i> <%= event.location %>
            </p>
            <p class="card-text flex-grow-1 text-muted">
              <%= truncate(event.description, length: 120, omission: '...') %>
            </p>
            <div class="mt-auto">
              <%= link_to 'View Details', event_path(event), class: 'btn btn-primary w-100' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  /* Add custom CSS to enhance card hover effects */
  .card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .card:hover {
    transform: scale(1.03);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }
</style>
